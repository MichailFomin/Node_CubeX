
<% include blocks/header.ejs %>
<h1>Cart</h1>
<% if(typeof content == 'object' && content){%>
<div class="container">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Product</th>
          <th scope="col">Description</th>
          <th scope="col">Price</th>
          <th scope="col">Delete</th>
          <th scope="col">Buy</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th><%=content.name %></th>
          <td><%=content.description %></td>
          <td><%=content.price %>$</td>
        
          <td>
            <form   action="/cart/delete" method="post" >
              <input hidden type="text" name="content_id" value="<%=content.id %>">
              <input type="submit" class="btn btn-secondary " name='delete' value='delete'>
            </form>
          </td>
          <td>
            <form   action="/cart/charge" method="post" >
              <script 
              src="https://checkout.stripe.com/checkout.js"
              class="stripe-button"
              data-key="pk_test_w3CAIc7zrNuYK9Qud0NE7FMH"
              data-amout="30000"
              data-name="cute"
              data-locale="auto"
              data-currency="gbp"
              >

              </script>
              <input  type="hidden" name="chargeAmount" value="30000">
              <input type="hidden"  name="content_name" value="<%=content.name %>">
              <input type="hidden"  name="content_price" value="<%=content.price %>">
              <input type="hidden"  name="content_id" value="<%=content.id %>">
              
            </form>
          </td>
        </tr>
      </tbody>
    </table>
</div>
<%}%>
<% include blocks/footer.ejs %>